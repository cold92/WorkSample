<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InverseTextView">
        <attr name="itv_leftColor" format="color" />
        <attr name="itv_rightColor" format="color" />
        <attr name="itv_progress" format="integer" />
    </declare-styleable>


    <declare-styleable name="BubbleLinearLayout">
        <attr name="bll_arrow_style">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="bll_arrow_orientation">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="none" value="4" />
        </attr>

        <attr name="bll_arrow_height" format="dimension"/>
        <attr name="bll_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
        <attr name="bll_arrow_offset" format="dimension" />
        <attr name="bll_corner_radius" format="dimension" />
        <attr name="bll_start_color" format="color|reference" />
        <attr name="bll_end_color" format="color|reference" />
    </declare-styleable>
</resources>