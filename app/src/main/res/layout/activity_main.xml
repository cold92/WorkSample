<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/deeplink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeepLink"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/autoinstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Install"
        android:textAllCaps="false"
        android:layout_toRightOf="@+id/deeplink" />

    <Button
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Webview"
        android:textAllCaps="false"
        android:layout_toRightOf="@+id/autoinstall" />

    <Button
        android:id="@+id/image_fresco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fresco"
        android:textAllCaps="false"
        android:layout_toRightOf="@+id/webview"/>

    <Button
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textAllCaps="false"
        android:layout_below="@+id/deeplink" />

    <Button
        android:id="@+id/exo_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exo Player"
        android:textAllCaps="false"
        android:layout_below="@+id/deeplink"
        android:layout_toRightOf="@+id/player"/>

    <Button
        android:id="@+id/videoview_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VideoView_Player"
        android:textAllCaps="false"
        android:layout_below="@+id/deeplink"
        android:layout_toRightOf="@+id/exo_player"/>

    <Button
        android:id="@+id/view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager"
        android:textAllCaps="false"
        android:layout_below="@+id/player"/>

</RelativeLayout>