<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/vivo_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="请填写Vivo账号密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/deeplink_textview"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="账号:" />

            <EditText
                android:id="@+id/vivo_account"
                style="@style/deeplink_editortext"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                style="@style/deeplink_textview"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="host:" />

            <EditText
                android:id="@+id/vivo_password"
                style="@style/deeplink_editortext"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jump_setting"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="跳转设置页面"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/install_apk"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="安装apk"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>