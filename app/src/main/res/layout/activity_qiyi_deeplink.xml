<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/link_desc"
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="欢迎页" />

        <Spinner
            android:id="@+id/link_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"/>

    <TextView
        style="@style/deeplink_textview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="请配置DeepLink参数" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="ftype:" />

        <EditText
            android:id="@+id/param_ftype"
            style="@style/deeplink_editortext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="27"
            android:hint="27"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="subtype:" />

        <EditText
            android:id="@+id/param_subtype"
            style="@style/deeplink_editortext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="149"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/param_aid_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="aid:" />

        <EditText
            android:id="@+id/param_aid"
            style="@style/deeplink_editortext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="991049000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/param_tvid_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="tvid:" />

        <EditText
            android:id="@+id/param_tvid"
            style="@style/deeplink_editortext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="991049000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/param_url_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            style="@style/deeplink_textview"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="url:" />

        <EditText
            android:id="@+id/param_url"
            style="@style/deeplink_editortext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="http://m.iqiyi.com"/>
    </LinearLayout>

    <TextView
        style="@style/deeplink_textview"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="跳转DeepLink链接结果" />

    <EditText
        android:id="@+id/deeplink_input_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_intent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="点击发送"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/save_link"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="保存到剪切板"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>